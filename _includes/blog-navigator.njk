---
layout: base.njk
pagination:
    data: collections.blog
    reverse: true
    alias: blogs
    size: 20
---
{% set css %}
    {% include "public/css/home.css" %}
	{% include "public/css/blog-navigator.css" %}
{% endset %}

<style>
	{{css|safe}}
</style>

<div class="master-container">
    <div class="left-empty"></div>    
    <div class="center-container">
        
        <div class="header-white-space"></div>
        <div class="main-content">
            <div class="markdown-content">{{content | safe}}</div>
            <div class="blog-list">
                {% for blog in blogs %}
                    <a class="list-link" href="{{ blog.url | url }}">
                        <article class = "list-article">
                            <h1>{{ blog.data.title }}</h1>
                            <div class="blog-list-connectorLine"><hr></div>
                            <time datetime="{{ blog.date | dateIso }}">{{ blog.date | dateReadable }}</time>
                        </article>
                    </a>
                {% endfor %}
            </div>
        </div>
    </div>
    <div class="right-empty"></div>
</div>
